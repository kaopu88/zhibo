    <script type="text/javascript" src="http://apps.bdimg.com/libs/zepto/1.1.4/zepto.min.js"></script>
    <script>

        $(function () {
            var tops = $(".btn-div").offset().top;

            window.onscroll = function(){
                var t = $('body').scrollTop();   // 目前监听的是整个body的滚动条距离

                if(t>tops+20){
                    $('.btn-div').css({'position': 'fixed'});
                }else{
                    $('.btn-div').css({'position': 'absolute'});
                }
            };
        });


        var digg = function ($this) {

            location.replace($this.href);

            var img = $($this).children('img').attr('src');

            var new_img = imgFormat(img, 's');

            $($this).children('img').attr('src', new_img);

            $($this).siblings().each(function (index, obj) {
                var simg = $(obj).children('img').attr('src');
                $(obj).children('img').attr('src', imgFormat(simg, 'h'));
            })
        };


        var imgFormat = function($path, $show) {
            var nowimg = $path.split('/');
            var img_name = nowimg.pop().split('-');
            var path = nowimg.join('/');
            return path+'/'+img_name[0]+'-'+$show+'.png';
        }

    </script>

